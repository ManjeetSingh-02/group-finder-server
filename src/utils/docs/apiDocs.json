{
  "openapi": "3.0.0",
  "info": {
    "title": "ChaiHub-Server API Documentation",
    "description": "Interactive API reference for ChaiHub-Server",
    "contact": {
      "name": "Manjeet Singh",
      "url": "https://github.com/ManjeetSingh-02",
      "email": "manjeetsingh.wrk@gmail.com"
    },
    "termsOfService": "",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api/v1",
      "description": "Development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "Enter your JWT token in the format: Bearer <token>"
      }
    },
    "schemas": {
      "SuccessData": {
        "description": "Standard structure for success details in API responses.",
        "required": [
          "message"
        ],
        "type": "object",
        "properties": {
          "message": {
            "description": "Descriptive success message",
            "type": "string"
          },
          "data": {
            "description": "Actual data returned from the API",
            "oneOf": [
              {
                "type": "object"
              },
              {
                "type": "array",
                "items": {
                  "type": "object"
                }
              }
            ]
          }
        }
      },
      "APISuccessResponse": {
        "description": "Standard structure for success API responses.",
        "required": [
          "success",
          "statusCode",
          "response"
        ],
        "type": "object",
        "properties": {
          "success": {
            "description": "Always true for success responses",
            "type": "boolean"
          },
          "statusCode": {
            "description": "HTTP status code",
            "type": "number"
          },
          "response": {
            "description": "Container for success response details",
            "$ref": "#/components/schemas/SuccessData"
          }
        }
      },
      "ErrorData": {
        "description": "Standard structure for error details in API responses.",
        "required": [
          "type",
          "message"
        ],
        "type": "object",
        "properties": {
          "type": {
            "description": "Category of error",
            "type": "string"
          },
          "message": {
            "description": "Descriptive error message",
            "type": "string"
          },
          "issues": {
            "description": "List of specific issues encountered",
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      },
      "APIErrorResponse": {
        "description": "Standard structure for all error API responses.",
        "required": [
          "success",
          "statusCode",
          "error"
        ],
        "type": "object",
        "properties": {
          "success": {
            "description": "Always false for error responses",
            "type": "boolean"
          },
          "statusCode": {
            "description": "HTTP status code",
            "type": "number"
          },
          "error": {
            "description": "Container for error response details",
            "$ref": "#/components/schemas/ErrorData"
          }
        }
      }
    }
  },
  "paths": {
    "/healthcheck": {
      "get": {
        "deprecated": false,
        "summary": "Health Check Controller",
        "description": "Controller to check the health status of the server.",
        "security": [],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APISuccessResponse"
                },
                "examples": {
                  "example1": {
                    "summary": "Successful response example",
                    "value": {
                      "success": true,
                      "statusCode": 200,
                      "response": {
                        "message": "Server is Running"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "parameters": [],
        "tags": [
          "HealthCheck"
        ]
      }
    }
  },
  "tags": [
    {
      "name": "HealthCheck",
      "description": "Health Check Routes"
    }
  ]
}